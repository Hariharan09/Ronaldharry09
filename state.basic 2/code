import React, { Component } from 'react';
import { View, Image, StyleSheet, Button, TouchableOpacity, Text } from 'react-native';

class DisplayAnImageWithStyle extends Component {
  constructor(props) {
    super(props);
    this.state = {
      bgcolor : "white" , bdcolor:"white" 
    };
  }
  changebgcolor(){
    this.setState({
     bgcolor:"blue"
    })
  }
  changebgcolor1(){
    this.setState({
     bgcolor:"pink"
    })
  }
  changebgcolor2(){
    this.setState({
     bgcolor:"lightgreen"
    })
  }
  

  render() {
    console.log('render');
    return (
      <View style={{flex:1,backgroundColor:this.state.bgcolor,justifyContent:"space-evenly"}}>
     <View style={{alignItems:"center"}}>
     <TouchableOpacity style={{height:30, width:100, backgroundColor:"blue",borderColor:this.state.bdcolor, borderWidth:2}} onPress={()=> this.changebgcolor()}>
     <Text style={{textAlign:"center"}}>Blue</Text>
     </TouchableOpacity>
     </View>
         <View style={{alignItems:"center"}}>
     <TouchableOpacity style={{height:30, width:100, backgroundColor:"pink",borderColor:this.state.bdcolor, borderWidth:2}} onPress={()=> this.changebgcolor1()}>
     <Text style={{textAlign:"center"}}>Pink</Text>
     </TouchableOpacity>
     </View>
         <View style={{alignItems:"center"}}>
     <TouchableOpacity style={{height:30, width:100, backgroundColor:"lightgreen",borderColor:this.state.bdcolor, borderWidth:2}} onPress={()=> this.changebgcolor2()}>
     <Text style={{textAlign:"center"}}>Lightgreen</Text>
     </TouchableOpacity>
     </View>
      </View>
    
    );
  }
}

export default DisplayAnImageWithStyle;
